<!-- Daily page layout -->
<section class="container-fluid px-0">
  <div class="row align-items-center content">
    <div class="col-md-6 text-center">
      <div class="row justify-content-center">
        <div class="col-10 col-lg-8 info mb-5 mb-md-0">
          <h1>{{weekday}}</h1>
          <h2><{{name.[0]}}/h2>
            <p class="leadText">{{special.[0]}}</p>
          </div>
        </div> 
      </div>
      <div class="col-md-6 px-0 py-0">
        <img class="img-fluid" src={{image.[0]}} alt="Tasty eats">
      </div>
    </div>

    <div class="row align-items-center content">
      <div class="col-md-6 px-0 py-0 order-2 order-md-1">
        <img class="img-fluid" src={{image.[1]}} alt="Tasty eats">
      </div>
      <div class="col-md-6 text-center order-1 order-md-2">
        <div class="row justify-content-center">
          <div class="col-10 col-lg-8 info mb-5 mb-md-0">
            <h1>{{weekday}}</h1>
            <h2>{{name.[1]}}</h2> 

            <p class="leadText">{{special.[1]}}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row align-items-center content">
      <div class="col-md-6 text-center">
        <div class="row justify-content-center">
          <div class="col-10 col-lg-8 info mb-5 mb-md-0">
            <h1>{{weekday}}</h1>
            <h2>{{name.[2]}}</h2>
          
            <p class="leadText">{{special.[2]}}</p>
          </div>
        </div> 
      </div>
      <div class="col-md-6 px-0 py-0">
        <img class="img-fluid" src={{image.[2]}} alt="Tasty eats">
      </div>
    </div>
  </section>